@model List<ProjectViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Listagem de Projetos</h2>

<div class="btn-block">
    <a class="btn btn-primary" href="/project/create">Novo Registro</a>
</div>

<table class="table table-hover table-bordered">
    <thead>
        <tr>
            <th colspan="3" class="text-center">Ações</th>
            <th>ID</th>
            <th>Code</th>
            <th>Descriçaõ</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var project in Model)
        {
            <tr>
                <td>
                    <a href="project/Edit?id=@project.id">Editar</a>
                </td>
                <td>
                    <a href="javascript:deleteProject(@project.id)">Apagar</a>
                </td>
                <td>
                    <a asp-area="" asp-controller="PostIt" asp-action="Index">Post It</a>
                </td>
                <td>@project.id</td>
                <td>@project.code</td>
                <td>@project.description</td>
            </tr>
        }
    </tbody>
</table>

<script>
    function deleteProject(id) {
        if (confirm("Confirma a exclusão do registro?"))
            location.href = "project/Delete?id=" + id;
    }
</script>

<style>
    h2 {
        text-align: center;
    }

    .table thead tr th {
        text-align: center;
    }

    .btn {
        float: right;
    }

    .table {
        margin-top: 60px;
    }
</style>