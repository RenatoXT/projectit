    <nav class="navbar navbar-default navbar-fixed-top navbar-inverse">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a asp-area="" asp-controller="Home" asp-action="Index" class="navbar-brand">Project It</a>
                <img src="https://midiatividades.files.wordpress.com/2012/10/post-it-note-with-push-pin.png" height="40"/>
            </div>
            <div class="collapse navbar-collapse" id="myNavbar">
                <ul class="nav navbar-nav navbar-right">
                    @if (ViewBag.Login == true)
                    {
                        <li><a asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
                        <li><a asp-area="" asp-controller="Users" asp-action="Index">Users</a></li>
                        <li><a asp-area="" asp-controller="Team" asp-action="Index">Team</a></li>
                        <li><a asp-area="" asp-controller="Project" asp-action="Index">Project</a></li>
                        <li><a asp-area="" asp-controller="PostIt" asp-action="Index">PostIt</a></li>
                        <li><a asp-area="" asp-controller="Login" asp-action="LogOff">Sair</a></li>

                    }
                    else
                    {
                        <li><a asp-area="" asp-controller="Home" asp-action="About">About</a></li>
                        <li><a asp-area="" asp-controller="Home" asp-action="Contact">Contact</a></li>
                        <li><a asp-area="" asp-controller="Login" asp-action="Register">Registrar</a></li>
                        <li><a asp-area="" asp-controller="Login" asp-action="Index">Entrar</a></li>
                    }

                </ul>
            </div>
        </div>
